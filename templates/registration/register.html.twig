{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="header">
        {% include "_navBar.html.twig" %}
        <div class="container" id="haut">
            <div class="mx-auto">
                <h2 class="registration_title text-center mt-3">Inscription</h2>
                <div class="row">
                    <div class="col-md-4 mx-auto mt-4 registration_box">
                        {{ form_start(registrationForm) }}
                            <div class="text-center">
                                <div class="mt-3">
                                    {{ form_label(registrationForm.username, '') }}
                                    {{ form_widget(registrationForm.username) }}
                                </div>
                                <div class="mt-3">
                                    {{ form_label(registrationForm.email) }}
                                    {{ form_widget(registrationForm.email) }}
                                </div>
                                <div class="mt-3">
                                    {{ form_label(registrationForm.plainPassword.first) }}
                                    {{ form_widget(registrationForm.plainPassword.first) }}
                                </div>
                                <div class="mt-3">
                                    {{ form_label(registrationForm.plainPassword.second) }}
                                    {{ form_widget(registrationForm.plainPassword.second) }}
                                </div>

                                <button type="submit" class="btn btn-primary mt-4 mb-4">Cr√©er un compte</button>
                            </div>
                        {{ form_end(registrationForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
