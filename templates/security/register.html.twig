{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="header">
        {% include "_navBar.html.twig" %}
        <div class="container" id="haut">
            <div class="mx-auto">
                <h2 class="registration_title text-center mt-3">Inscription</h2>
                <div class="row">
                    <div class="col-md-4 mx-auto mt-4 registration_box">
                        {{ form_start(form) }}
                            <div class="text-center">
                                {{ form_row(form.username, {
                                    'attr': {'placeholder': 'Nom d\'utilisateur...'}})}}
                                {{ form_row(form.email, {
                                    'attr': {'placeholder': 'Adresse email...'}})}}
                                {{ form_row(form.password, {
                                    'attr': {'placeholder': 'Mot de passe...'}})}}
                                {{ form_row(form.confirm_password, {
                                    'attr': {'placeholder': 'Répétez votre mot de passe...'}})}}
                                <button type="submit" class="btn btn-primary mt-4 mb-4">Créer un compte</button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
