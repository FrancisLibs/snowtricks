{% extends 'base.html.twig' %}

{% block title %}Connexion !{% endblock %}

{% block insert %}
    <div class="container" id="haut">
        <div class="mx-auto">
            <h2 class="registration_title text-center mt-3">Connexion</h2>
            <div class="row">
                <div class="col-md-4 mx-auto pt-4 pb-4 registration_box">
                   <form method="post">
                        {% if error %}
                            <div class="alert alert-danger">
                                {{ error.messageKey | trans(error.messageData, 'security') }}
                            </div>
                        {% endif %}

                        {% if app.user %}
                            <div class="mb-3">
                                Vous êtes connécté en tant que  {{ app.user.username }}, 
                                    <a href="{{ path('app_logout') }}">Déconnexion</a>
                            </div>
                        {% endif %}

                        <div class="form-group">
                            <input type="text" value="{{ last_username }}" name="username" 
                                class="form-control" placeholder="Nom d'utilisateur..." required autofocus>
                        </div>

                        <div class="form-group">
                            <input type="password" name="password" placeholder="Mot de passe..."   
                                class="form-control" required>
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"

                        <div class="form-group">
                            <button type="submmit" class="btn btn-primary">
                                Connexion !
                            </button>
                        </div>

                    </form>
                </div>
                <div class="col-md-4 mx-auto">
                    <a href="{{ path('app_forgotten_password') }}">Mot de passe oublié</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}