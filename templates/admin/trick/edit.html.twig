{% extends 'base.html.twig' %}

{% block body %}
    <div class="container" id="haut">
        <div class="show_page mx-auto mt-3 pb-5">

            {# Image à la une #}
            <div class="show_main_picture d-flex flex-column align-items-center justify-content-center text-center" 

                {% if trick.mainPicture %}
                    style="background-image: url({{ vich_uploader_asset(trick.mainPicture, 'imageFile') }});"
                {% else %}
                    {% if trick.picture %}
                        style="background-image: url({{ vich_uploader_asset(trick.picture, 'imageFile') }} );"
                    {% else %}
                        style="background-image: url({{ '/build/images/empty.jpg' }} );"
                    {% endif %}
                {% endif %}
            >
                {# Nom du trick #}
                <h1>{{ trick.name }}</h1>
            </div>

            <div class="edit_form_images">{# Photos et vidéos #}
                <div class="d-flex flex-wrap justify-content-around align-items-center mt-2">
                    {# Images #}
                    {% if trick.pictures %} 
                        {% for picture in trick.pictures %}
                            {% if not picture.mainPicture %}
                                <div class="edit_cards m-2">
                                    <img class="edit_card_img show_picture" src="{{ vich_uploader_asset(picture, 'imageFile') }}" alt="image">

                                    <div class="inputFile">
                                        {# Bouton editer avec son formulaire #}
                                        <a class="btn_edit_picture"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>  
                                        <form style="display: none;">
                                            <input type="file">
                                        </form>

                                        {# Bouton effacer #}
                                        <a href="{{ path('admin.picture.delete', {id : picture.id}) }}"
                                            data-delete  data-token="{{csrf_token('delete' ~ picture.id) }}">
                                            <i class="far fa-trash-alt  mb-1 mr-1"></i>
                                        </a>  
                                    </div>

                                </div>
                            {% endif %}
                        {% endfor %}
                    {% endif %}

                    {# Vidéos #}
                    {% if trick.videos %}
                        {% for video in trick.videos %}
                            <div class="edit_cards m-2">
                                <iframe width="190" height="180" src="{{ video.link }}" frameborder="0" 
                                    allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" 
                                    allowfullscreen>
                                </iframe>
                                <div class="inputFile">
                                    {# Bouton editer #}
                                    <a class="btn_edit_picture"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>  

                                    {# Bouton effacer #}
                                    <a href="{{ path('admin.video.delete', {id : video.id}) }}"
                                        data-delete  data-token="{{csrf_token('delete' ~ video.id) }}">
                                        <i class="far fa-trash-alt  mb-1 mr-1"></i>
                                    </a>  
                                </div>
                            </div>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>


            <div class="edit_form mx-auto">
                {{ include('admin/trick/_editform.html.twig') }}
            </div>
           {# <embed src="https://www.youtube.com/embed/CrLMXqNuUXw">#}
        </div>
    </div>
{% endblock %}
