{% extends 'base.html.twig' %}

{% block body %}
    <div class="container" id="haut">
        <div class="show_page mx-auto mt-3 pb-5">

            {# Définition de l'image à la une ou l'image vide #}
            {% set url = "build/empty.jpg" %}
            {% if trick.mainPicture %}
                {% set url = trick.mainPicture %}
            {% endif %}

            {# Image à la une #}
            <div class="show_main_picture d-flex flex-column" style="background-image: url('{{ asset(url) }}');">
                {# Nom du trick #}
                <div class="show_div_titre d-flex flex-column justify-content-center align-items-center">
                    <div class="show_picture_title text-center">
                        <h1>{{ trick.name }}</h1>
                    </div>
                </div>
            </div>

            {# Photos et vidéos #}
            <div class="edit_medias mt-3">
                {% for picture in trick.pictures %}
                    {% if not picture.mainPicture %}
                        <div class="edit_cards m-2">
                            <img class="edit_card_img show_picture" src="{{ picture.url }}" alt="{{ picture.name }}">
                            <div class="edit_icones mt-2 mr-2">
                                <a href="{{ path('admin.picture.edit', {idPicture : picture.id, id : trick.id}) }}">
                                    <img class="icone_editer mt-n3 mr-3" src="{{ asset('build/stylo.png') }}" alt="Editer"> 
                                </a>  
                                <form class="tricks_delete_form" method="post" 
                                    action="{{ path('admin.picture.delete', 
                                    {idPicture : picture.id, id: trick.id}) }}" 
                                    onsubmit="return confirm('Voulez-vous supprimer cette image ?')">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ trick.id) }}">
                                    <button class="btn"><img class="icone_effacer" src="{{ asset('build/Poubelle.png') }}" alt="Effacer"></button>
                                </form>
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
            <div class="edit_form mx-auto">
                {{ include('admin/trick/_editform.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}