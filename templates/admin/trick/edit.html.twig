{% extends 'base.html.twig' %}

{% block body %}
   <div class="header">
        {% include "_navBar.html.twig" %}
        <div class="container" id="haut">
            <div class="show_page mx-auto mt-3 pb-5">

                {# Définition de l'image à la une ou l'image vide #}
                {% set url = "build/empty.jpg" %}
                {% for picture in trick.pictures %}
                    {% if picture.mainPicture %}
                        {% set url = picture.url %}
                    {% endif %}
                {% endfor %}
 
                {# Image à la une #}
                <div class="show_main_picture d-flex flex-column" style="background-image: url('{{ asset(url) }}');">

                    {# boutons d'édition #}
                    <div class="show_div_icones d-flex flex-row justify-content-end">
                        <div class="text-right d-flex flex-row justify-content-end">
                            <a href="{{ path('admin.picture.edit', {id : trick.id}) }}">
                                <img class="icone_editer" src="{{ asset('build/stylo.png') }}" alt="Editer"> 
                            </a>                            
                            <a href="{{ path('admin.picture.delete', {'id' : trick.id}) }}">
                                <img class="icone_effacer" src="{{ asset('build/Poubelle.png') }}" alt="Effacer"> 
                            </a>
                        </div>
                    </div>

                    {# Nom du trick #}
                    <div class="show_div_titre d-flex flex-column justify-content-center align-items-center">
                        <div class="show_picture_title text-center">
                            <h1>{{ trick.name }}</h1>
                        </div>
                    </div>
                </div>

                {# Photos et vidéos #}
                <div class="edit_medias mt-3">
                    {% for picture in trick.pictures %}
                        {% if not picture.mainPicture %}
                            <div class="edit_cards m-2">
                                <img class="edit_card_img show_picture" src="{{ picture.url }}" alt="{{ picture.name }}">
                                <div class="edit_icones mt-2 mr-2">
                                    <a href="{{ path('admin.mainPicture.edit', {id : trick.id}) }}">
                                        <img class="icone_editer mt-n3 mr-3" src="{{ asset('build/stylo.png') }}" alt="Editer"> 
                                    </a>                            
                                    <a href="{{ path('admin.mainPicture.delete', {'id' : trick.id}) }}">
                                        <img class="icone_effacer mr-2" src="{{ asset('build/Poubelle.png') }}" alt="Effacer"> 
                                    </a>
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
                <div class="edit_form mx-auto">
                    {{ include('admin/trick/_form.html.twig', {button: 'Enregistrer'}) }}
                </div>
            </div>
        </div>
    </div>
   
{% endblock %}