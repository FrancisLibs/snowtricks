{{form_start(form)}}

    <div class="d-flex flex-row justify-content-start align-items-end">
        <div class="w-50 mb-3 mr-5">
            {{ form_label(form.name, FALSE ) }}
            {{ form_widget(form.name) }}
        </div>
        <div class="w-50">
            {{form_row(form.category)}}
        </div>
    </div>

    <div class="row edit_form_descritpion w-100">
        <div class="col-md-12 mb-3">
            {{ form_label(form.description, '') }}
            {{ form_widget(form.description,{ 'attr': {'rows': '7'} }) }}
        </div>
    </div>

    <div class="d-flex flex-row pr-2 align-items-baseline">
        <div class="col-md-6">
            <button class="btn btn-primary edit_save_btn">
                {{ button | default('Enregistrer') }}
            </button>
        </div>
    </div>

{{form_end(form)}}