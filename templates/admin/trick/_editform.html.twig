{{form_start(form)}}

    {# formulaire trick #}
    <div class="w-75 mx-auto">

        <div class="row">
            <div class="col-md-5 mb-2">
                {{ form_row(form.name) }}
            </div>
        </div>

         <div class="row">
            <div class="col-md-12 mb-3">
                {{ form_row(form.description) }}
            </div>
        </div>

        <div class="row">
            {# Catégorie #}
            <div class="col-md-4">
                <div>
                    {{ form_row(form.category) }}
                </div>
                <div class="mt-5 w-75">
                    <input type ="submit" class="btn btn-primary pl-5 pr-5" value="Valider">
                </div>
            </div>

            {# Media #}
            <div class="col-md-6 offset-md-1 border border-primary rounded">
                {# Images #}
                <div>
                    {{ form_row(form.pictureFiles) }}
                </div>
                {# Videos #}
                <div>
                    {{ form_row(form.videoFile) }}
                </div>
                <p><small><em>Ex. Lien vidéo : https://www.youtube.com/embed/UNItNopAeDU</em></small></p>
            </div>
        </div>
    </div>
    
{{form_end(form)}}
